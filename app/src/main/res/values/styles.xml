<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorAnimationDuration">300</item>
        <item name="tabTextColor">#888888</item>
        <item name="tabSelectedTextColor">#009688</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item> <!-- Place in res/font/ -->
        <item name="android:textAllCaps">false</item>
    </style>

</resources>